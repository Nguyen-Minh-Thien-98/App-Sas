<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.ThuVien.Lop.Lop9.Activity9_6.Activity9_6"
    android:orientation="vertical"
    android:background="@drawable/bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@android:color/holo_orange_light"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp">

        <Button
            android:id="@+id/btnback"
            android:layout_width="12mm"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:background="@drawable/ic_outline_arrow_left_75"/>

        <TextView
            android:paddingTop="20dp"
            android:layout_width="220dp"
            android:paddingBottom="18dp"
            android:layout_height="match_parent"
            android:text=" Kỹ năng! Chỉ là chuyện nhỏ."
            android:textSize="26sp"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:textColor="@android:color/white"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/btnhome"
            android:layout_width="12mm"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:drawablePadding="@android:dimen/app_icon_size"
            android:drawableRight="@drawable/ic_baseline_home_60"
            android:background="@drawable/homebutton"/>
    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp">

            <Button
                android:id="@+id/btn9_13_1"
                android:layout_width="50mm"
                android:layout_height="19mm"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/mybutton"
                android:textStyle="bold"
                android:textSize="25sp"
                android:textColor="@android:color/white"
                android:text="Quy tắc bàn tay giao tiếp"
                android:textAllCaps="false"
                android:layout_marginBottom="20dp"/>

            <Button
                android:id="@+id/btn9_13_2"
                android:layout_width="50mm"
                android:layout_height="19mm"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/mybutton"
                android:textStyle="bold"
                android:textSize="25sp"
                android:textColor="@android:color/white"
                android:text="Nguyên tắc đồ lót"
                android:textAllCaps="false"
                android:layout_marginBottom="20dp"/>

            <Button
                android:id="@+id/btn9_13_3"
                android:layout_width="50mm"
                android:layout_height="19mm"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/mybutton"
                android:textStyle="bold"
                android:textSize="25sp"
                android:textColor="@android:color/white"
                android:text="Khoảng cách phù hợp, an toàn theo sau"
                android:textAllCaps="false"
                android:layout_marginBottom="20dp"/>

            <Button
                android:id="@+id/btn9_13_4"
                android:layout_width="50mm"
                android:layout_height="19mm"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/mybutton"
                android:textStyle="bold"
                android:textSize="25sp"
                android:textColor="@android:color/white"
                android:text="Quy tắc “9 không”"
                android:textAllCaps="false"
                android:layout_marginBottom="20dp"/>

            <Button
                android:id="@+id/btn9_13_5"
                android:layout_width="50mm"
                android:layout_height="19mm"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/mybutton"
                android:textStyle="bold"
                android:textSize="25sp"
                android:textColor="@android:color/white"
                android:text="Kỹ năng từ chối"
                android:textAllCaps="false"
                android:layout_marginBottom="20dp"/>

            <Button
                android:id="@+id/btn9_13_6"
                android:layout_width="50mm"
                android:layout_height="19mm"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/mybutton"
                android:textStyle="bold"
                android:textSize="25sp"
                android:textColor="@android:color/white"
                android:text="Ngồi hợp lý, thật ăn ý"
                android:textAllCaps="false"
                android:layout_marginBottom="20dp"/>

            <Button
                android:id="@+id/btn9_13_7"
                android:layout_width="50mm"
                android:layout_height="19mm"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/mybutton"
                android:textStyle="bold"
                android:textSize="25sp"
                android:textColor="@android:color/white"
                android:text="Video liên quan"
                android:textAllCaps="false"
                android:layout_marginBottom="20dp"/>







        </LinearLayout>
    </ScrollView>

</LinearLayout>