<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    android:background="@drawable/bg"
    android:orientation="vertical">
        <FrameLayout
            android:id="@+id/fragmentcontainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="250dp"
                            android:layout_marginBottom="25dp"
                            android:layout_marginTop="25dp"
                            android:adjustViewBounds="true"
                            android:background="@drawable/poster"
                            />


                        <Button
                            android:id="@+id/btnthuvien"
                            android:layout_width="320dp"
                            android:layout_height="90dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="20dp"
                            android:background="@drawable/ic_thu_vien_svg"
                            android:paddingTop="15dp"
                            android:paddingLeft="80dp"
                            android:scaleType="fitCenter"
                            android:text="Thư Viện"
                            android:textColor="@android:color/white"
                            android:textSize="20sp"
                            android:textStyle="bold" />
                        <Button
                            android:id="@+id/btnLuyentap"
                            android:layout_width="320dp"
                            android:layout_height="90dp"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/ic_luyen_tap_svg"
                            android:paddingBottom="30dp"
                            android:paddingLeft="85dp"
                            android:scaleType="fitCenter"
                            android:text="Luyện Tập"
                            android:textColor="@android:color/white"
                            android:textSize="20sp"
                            android:textStyle="bold" />
                        <Button
                            android:id="@+id/btnHotro"
                            android:layout_width="310dp"
                            android:layout_height="90dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="30dp"
                            android:background="@drawable/ic_ho_tro_svg"
                            android:paddingTop="15dp"
                            android:paddingLeft="80dp"
                            android:scaleType="fitCenter"
                            android:text="Hỗ Trợ"
                            android:textColor="@android:color/white"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <Button
                            android:id="@+id/btnThongtin"
                            android:layout_width="310dp"
                            android:layout_height="70dp"
                            android:layout_gravity="center_horizontal"
                            android:drawableLeft="@drawable/ic_information"
                            android:paddingLeft="15dp"
                            android:layout_marginBottom="30dp"
                            android:background="@drawable/thongtinbutton"
                            android:paddingBottom="20dp"
                            android:paddingTop="20dp"
                            android:scaleType="fitCenter"
                            android:text="Thông Tin"
                            android:textColor="@android:color/white"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            style="?android:attr/borderlessButtonStyle"/>


                </LinearLayout>
        </FrameLayout>







</LinearLayout>