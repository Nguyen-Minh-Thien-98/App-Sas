<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.ThuVien.Lop.Lop9.Lop9"
    android:background="@drawable/bg"
    android:orientation="vertical">



    <FrameLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="40dp"
        android:background="@android:color/holo_orange_light"
        android:orientation="horizontal"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        android:layout_marginBottom="20dp">




        <Button
            android:id="@+id/btnback"
            android:layout_width="12mm"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:background="@drawable/ic_outline_arrow_left_75"/>

        <TextView
            android:id="@+id/Lop"
            android:paddingTop="20dp"
            android:layout_width="220dp"
            android:layout_height="match_parent"
            android:text="Lớp 9"
            android:textSize="40sp"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:textColor="@android:color/white"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/btnhome"
            android:layout_width="12mm"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:drawablePadding="@android:dimen/app_icon_size"
            android:drawableRight="@drawable/ic_baseline_home_60"
            android:background="@drawable/homebutton"/>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp">

                    <Button
                        android:id="@+id/btn9_1"
                        android:layout_width="50mm"
                        android:layout_height="18mm"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/mybutton"
                        android:textStyle="bold"
                        android:textSize="25sp"
                        android:textAllCaps="false"
                        android:textColor="@android:color/white"
                        android:text='Phần "e thẹn" trên cơ thể là gì nhỉ?'
                        android:layout_marginBottom="20dp"/>


                    <Button
                        android:id="@+id/btn9_2"
                        android:layout_width="50mm"
                        android:layout_height="18mm"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/mybutton"
                        android:textStyle="bold"
                        android:textSize="25sp"
                        android:textColor="@android:color/white"
                        android:textAllCaps="false"
                        android:text='Bạn có biết em bé đến từ đâu không?'
                        android:layout_marginBottom="20dp"/>

                    <Button
                        android:id="@+id/btn9_3"
                        android:layout_width="50mm"
                        android:layout_height="18mm"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/mybutton"
                        android:textStyle="bold"
                        android:textSize="25sp"
                        android:textColor="@android:color/white"
                        android:text='Bạn biết gì về
                        chuyện "ấy"'
                        android:textAllCaps="false"
                        android:layout_marginBottom="20dp"/>

                    <Button
                        android:id="@+id/btn9_4"
                        android:layout_width="50mm"
                        android:layout_height="19mm"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/mybutton"
                        android:textStyle="bold"
                        android:textSize="25sp"
                        android:textColor="@android:color/white"
                        android:textAllCaps="false"
                        android:text='Mát xa "bé con" của bản thân nên hay không?'
                        android:layout_marginBottom="20dp"/>

                    <Button
                        android:id="@+id/btn9_5"
                        android:layout_width="50mm"
                        android:layout_height="19mm"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/mybutton"
                        android:textStyle="bold"
                        android:textSize="25sp"
                        android:textColor="@android:color/white"
                        android:textAllCaps="false"
                        android:text='Xem phim 18+ nên hay không?'
                        android:layout_marginBottom="20dp"/>


                    <Button
                        android:id="@+id/btn9_6"
                        android:layout_width="50mm"
                        android:layout_height="19mm"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/mybutton"
                        android:textStyle="bold"
                        android:textSize="25sp"
                        android:textColor="@android:color/white"
                        android:textAllCaps="false"
                        android:text="Tránh thai – Điều bạn cần biết"
                        android:layout_marginBottom="20dp"/>

                    <Button
                        android:id="@+id/btn9_7"
                        android:layout_width="50mm"
                        android:layout_height="19mm"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/mybutton"
                        android:textStyle="bold"
                        android:textSize="25sp"
                        android:textAllCaps="false"
                        android:textColor="@android:color/white"
                        android:text='Chuyện dậy thì'
                        android:layout_marginBottom="20dp"/>

                    <Button
                        android:id="@+id/btn9_8"
                        android:layout_width="50mm"
                        android:layout_height="19mm"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/mybutton"
                        android:textStyle="bold"
                        android:textSize="25sp"
                        android:textColor="@android:color/white"
                        android:textAllCaps="false"
                        android:text='“Cô/cậu bé” có thể mắc bệnh không?'
                        android:layout_marginBottom="20dp"/>

                    <Button
                        android:id="@+id/btn9_9"
                        android:layout_width="50mm"
                        android:layout_height="19mm"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/mybutton"
                        android:textStyle="bold"
                        android:textSize="25sp"
                        android:textAllCaps="false"
                        android:textColor="@android:color/white"
                        android:text='Mách nhỏ về “con tim”'
                        android:layout_marginBottom="20dp"/>

                    <Button
                        android:id="@+id/btn9_10"
                        android:layout_width="50mm"
                        android:layout_height="19mm"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/mybutton"
                        android:textStyle="bold"
                        android:textSize="25sp"
                        android:textColor="@android:color/white"
                        android:textAllCaps="false"
                        android:text="Chuyện trăm năm"
                        android:layout_marginBottom="20dp"/>

                    <Button
                        android:id="@+id/btn9_11"
                        android:layout_width="50mm"
                        android:layout_height="19mm"
                        android:textAllCaps="false"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/mybutton"
                        android:textStyle="bold"
                        android:textSize="25sp"
                        android:textColor="@android:color/white"
                        android:text="Bảy sắc cầu vồng - LGBT"
                        android:layout_marginBottom="20dp"/>


                    <Button
                        android:id="@+id/btn9_12"
                        android:layout_width="50mm"
                        android:layout_height="19mm"
                        android:textAllCaps="false"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/mybutton"
                        android:textStyle="bold"
                        android:textSize="25sp"
                        android:textColor="@android:color/white"
                        android:text="Khủng hoảng tuổi dậy thì?"
                        android:layout_marginBottom="20dp"/>

                    <Button
                        android:id="@+id/btn9_13"
                        android:layout_width="50mm"
                        android:layout_height="19mm"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/mybutton"
                        android:textStyle="bold"
                        android:textSize="25sp"
                        android:textColor="@android:color/white"
                        android:textAllCaps="false"
                        android:text="Kỹ năng!
                        Chỉ là chuyện nhỏ"
                        android:layout_marginBottom="20dp"/>




                </LinearLayout>

            </LinearLayout>



    </ScrollView>


</LinearLayout>